<h1>All Open Offers</h1>

<ol>
    <% @offers.open.each do |o| %>
        <li>Job Name: <%= o.job_name %><br>
        Price Offer: <%= o.price_offer %><br>
        Due by: <%=o.due_date%><br>
        Submitted by: <%=o.user.email%><br>
        Open Offer Page: <%= link_to "#{o.job_name} from #{o.user.email}", offer_path(o)%></li><br>
    <% end %>
    
</ol>