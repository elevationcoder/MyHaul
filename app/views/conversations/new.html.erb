<h1>New Conversation</h1>

<%= form_tag conversations_path, method: :post do %>
    <div>
        <%= select_tag :user_id%>
    </div>
           
    <div>
        <%= text_field_tag :subject, placeholder="Subject"%>
    </div>
    
    <div>
        <%= text_area_tag :body, placeholder="Leave a comment"%>
    </div>


<%end%>
